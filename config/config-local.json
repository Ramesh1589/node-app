{
    "db": {
        "mysql": {
            "host": "localhost",
            "port": 3306,
            "username": "root",
            "password": "local",
            "database": "newsvideo",
            "dialect": "mysql",
            "logging": false,
            "define": {
                "underscored": true,
                "freezeTableName": true,
                "syncOnAssociation": true,
                "charset": "utf8mb4",
                "collate": "utf8mb4_unicode_ci"
            },
            "dialectOptions": {
                "multipleStatements": true
            },
            "sync": {
                "force": true
            },
            "syncOnAssociation": true,
            "pool": {
                "max": 10,
                "min": 0,
                "idle": 30000,
                "acquire": 60000
            }
        },
        "mongodb": {
            "database": "newsvideo",
            "server": "localhost",
            "port": "27017",
            "user": "local",
            "password": "local",
            "options": {
                "useUnifiedTopology": true,
                "useNewUrlParser": true,
                "useCreateIndex": true,
                "autoReconnect": true,
                "reconnectTries": 100,
                "reconnectInterval": 1000,
                "connectTimeoutMS": 300000,
                "socketTimeoutMS": 300000,
                "keepAlive": true
            }
        }
    }
}
